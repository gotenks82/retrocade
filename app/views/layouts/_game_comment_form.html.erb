<% if signed_in? %>
    <%= form_for @comment, :remote => true , html: {class: 'form-inline', role: 'form'} do |f| %>

      <div class="form-group input-group">

        <%= f.text_field :text, class:'form-control', placeholder:'Your comments' %>
      </div>
      <div class="form-group input-group">
        <%= f.button :add, class:'btn btn-default' %>
      </div>
        <%= f.hidden_field :game_id %>
        <%= f.hidden_field :user_id %>
    <% end %>
<% else %>
<span class="small">Log in to comment on this game...</span>


<% end %>

