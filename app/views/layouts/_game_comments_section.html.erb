<div class="detailBox">
  <div class="commentBox">
      <%= render 'layouts/game_comment_form' %>
  </div>
  <div class="actionBox">
    <% if @comments.length > 0 %>
    <ul class="commentList">
      <% @comments.each do |c| %>
      <li>
        <div class="commenterImage">
          <%=link_to (gravatar_for c.user), user_path(c.user) %>
        </div>
        <div class="commentText">
          <p class=""><%= c.text %></p>
          <span class="sub-text"><%=link_to c.user.name, user_path(c.user) %></span>
          <span class="date sub-text">on <%= c.created_at%></span>
        </div>
      </li>
      <% end %>
    </ul>
     <%else %>
        <div class="commentText">
          <p>Be the first to comment this game!</p>
        </div>
    <%end%>
  </div>
</div>

