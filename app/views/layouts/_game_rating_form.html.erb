<% if signed_in? %>
<%= form_for @vote, authenticity_token: true , :url => votes_path(@vote, format: :js), :remote => true do |f| %>
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.hidden_field :game_id, :value => @game.id %>
    <fieldset class="rating">
      <% if @vote.id.nil? %>
      <legend>Rate this game:</legend>
          <% else %>
          <legend>You rated this game:</legend>
      <%end%>
      <%= f.radio_button :vote, '5', :value => 5, :id=> 'star5', :onclick => 'send_vote();'%><label for="star5" title="Rocks!">5 stars</label>
      <%= f.radio_button :vote, '4', :value => 4, :id=> 'star4', :onclick => 'send_vote();'%><label for="star4" title="Pretty good">4 stars</label>
      <%= f.radio_button :vote, '3', :value => 3, :id=> 'star3', :onclick => 'send_vote();'%><label for="star3" title="Meh">3 stars</label>
      <%= f.radio_button :vote, '2', :value => 2, :id=> 'star2', :onclick => 'send_vote();'%><label for="star2" title="Kinda bad">2 stars</label>
      <%= f.radio_button :vote, '1', :value => 1, :id=> 'star1', :onclick => 'send_vote();'%><label for="star1" title="Sucks big time">1 star</label>
    </fieldset>
<% end %>
<% else %>
    <fieldset class="rating">
      <legend>Log in to rate this game...</legend>
    </fieldset>
<% end %>

